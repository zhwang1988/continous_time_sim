		this.currentDate = currentDate;
	}
	
	public int[] getMaxCapProductType() {
		return MaxCapProductType;
	}
	public void setMaxCapProductType(int[] maxCapProductType) {
		MaxCapProductType = maxCapProductType;
	}

	
	
